<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/message_cards_item">

    <ImageView
        android:id="@+id/iv_card_picture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="10"
        android:scaleType="centerCrop"
        android:src="@drawable/img_office"
        tools:src="@drawable/img_equipment" />

    <TextView
        android:id="@+id/tv_card_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="3"
        android:textAlignment="textStart"
        tools:text="一键求助" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/action_bar_card_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/btn_card_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:text="@string/btn_action_sos"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />
    </android.support.constraint.ConstraintLayout>


</LinearLayout>